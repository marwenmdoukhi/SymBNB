{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullname }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row align-items-center">

            <div class="col-3">

              <img src="{{ user.picture }}" class="avatar"  alt="avatr de {{ user.fullname }}">
                <br>
                <span class="badge badge-primary"> {{ user.ads |length }}Annonces</span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullname }}</h1>
                {% if user is same as (app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profil') }}" class="btn btn-primary mr-2 mb-2">
                        Modififer mes inforamtion
                        </a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mr-2 mb-2">
                            Modiifier mon mot de passe
                        </a>
                    </div>

                {% endif %}
            </div>
        </div>
        {{ user.description|raw }}
        <hr>
        <h2>les Annoce de {{ user.fullname }}</h2>
        {% if user.ads |length >0 %}
                <div class="row">
                    {% for ad in user.ads %}

                        {% include 'ad/_ad.html.twig' %}

                    {% endfor %}
                </div>
            {% else %}
            <div class="align-items-center alert-warning">
                <p>
                    <strong>{{ user.fullname }}</strong> n'pas encors d'annoce sur le site
                </p>
            </div>
        {% endif %}
    </div>

{% endblock %}
